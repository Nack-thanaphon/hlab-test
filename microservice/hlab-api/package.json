  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "consume:prod": "node dist/consumer",
    "task:dev": "nest start --watch --config task.json",
    "task:prod": "node dist/src/task",
    "migration:run": "npm run typeorm migration:run -- -d ./src/typeorm.ts",
    "migration:generate": "npm run typeorm -- -d ./src/typeorm.ts migration:generate ./src/migrations/$npm_config_name",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
