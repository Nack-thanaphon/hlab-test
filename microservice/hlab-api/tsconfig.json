{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": false, // Disable all strict type-checking options
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true, // Skip type checking of declaration files
    "strictNullChecks": false, // Disable strict null checks
    "noImplicitAny": false, // Allow expressions and declarations with an implied 'any' type
    "strictBindCallApply": false, // Disable strict checking of the bind, call, and apply methods
    "forceConsistentCasingInFileNames": false, // Allow inconsistent casing in file names
    "noFallthroughCasesInSwitch": false // Allow fallthrough cases in switch statements
  },
  "watchOptions": {
    "watchFile": "fixedPollingInterval"
  }
}
